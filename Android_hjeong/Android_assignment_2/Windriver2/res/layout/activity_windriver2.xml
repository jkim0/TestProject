<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/Dialog"
        android:layout_alignTop="@+id/Dialog"
        android:layout_toRightOf="@+id/Dialog" />

    <Button
        android:id="@+id/Edit_text"
        android:layout_width="101dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Dialog"
        android:layout_marginTop="50dp"
        android:layout_toLeftOf="@+id/text"
        android:text="@string/Edit_write" />

    <Button
        android:id="@+id/Dialog"
        android:layout_width="101dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="16dp"
        android:text="@string/Dialog" />

    <TextView
        android:id="@+id/Editext_show"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/Edit_text"
        android:layout_alignTop="@+id/Edit_text"
        android:layout_toRightOf="@+id/Edit_text" />
    
    <LinearLayout
        android:id="@+id/Context_View"  
         android:layout_width="fill_parent"
    	android:layout_height="fill_parent"
    	android:orientation="vertical" >  
    </LinearLayout>  

</RelativeLayout>